@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null,
    new { @class = "btn btn-default btn-sm"})

@foreach(var link in Model)
{
    @Html.RouteLink(link, new{
    controller = "Product",
    action = "List",
    category = link,
    page = 1},
        new { @class = "btn btn-default btn-sm"
                        + (link == ViewBag.SelectedCategory ? "btn-primary" : "")
        } )
}